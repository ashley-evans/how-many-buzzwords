{
    "StartAt": "Check last crawl",
    "States": {
        "Check last crawl": {
            "Type": "Task",
            "Resource": "${RecentCrawlARN}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "Lambda.ServiceException",
                        "Lambda.AWSLambdaException",
                        "Lambda.SdkClientException",
                        "Lambda.TooManyRequestsException",
                        "Lambda.Unknown"
                    ],
                    "IntervalSeconds": 3,
                    "BackoffRate": 2.0,
                    "MaxAttempts": 3
                }
            ],
            "Next": "Was URL recently crawled?"
        },
        "Was URL recently crawled?": {
            "Type": "Choice",
            "Choices": [
                {
                    "Variable": "$.recentlyCrawled",
                    "BooleanEquals": true,
                    "Next": "Recently crawled"
                },
                {
                    "Variable": "$.recentlyCrawled",
                    "BooleanEquals": false,
                    "Next": "Crawl"
                }
            ]
        },
        "Recently crawled": {
            "Type": "Succeed"
        },
        "Crawl": {
            "Type": "Task",
            "Resource": "${CrawlURLsARN}",
            "Parameters": {
                "url.$": "$.baseURL"
            },
            "Retry": [
                {
                    "ErrorEquals": [
                        "CrawlError",
                        "Lambda.ServiceException",
                        "Lambda.AWSLambdaException",
                        "Lambda.SdkClientException",
                        "Lambda.TooManyRequestsException",
                        "Lambda.Unknown"
                    ],
                    "IntervalSeconds": 3,
                    "BackoffRate": 2.0,
                    "MaxAttempts": 3
                }
            ],
            "Next": "Did Crawl Succeed?"
        },
        "Did Crawl Succeed?": {
            "Type": "Choice",
            "Choices": [
                {
                    "Variable": "$.success",
                    "BooleanEquals": true,
                    "Next": "Send Crawl Success Message to Event Bus"
                },
                {
                    "Variable": "$.success",
                    "BooleanEquals": false,
                    "Next": "Crawl Failed"
                }
            ]
        },
        "Send Crawl Success Message to Event Bus": {
            "Type": "Task",
            "Resource": "arn:aws:states:::events:putEvents",
            "Parameters": {
                "Entries": [
                    {
                        "EventBusName": "${CrawlServiceEventBusARN}",
                        "DetailType": "Crawl Complete via Crawl Service",
                        "Detail": {
                            "baseURL.$": "$.baseURL",
                            "pathnames.$": "$.pathnames"
                        },
                        "Source": "crawl.aws.buzzword"
                    }
                ]
            },
            "End": true
        },
        "Crawl Failed": {
            "Type": "Fail"
        }
    }
}
