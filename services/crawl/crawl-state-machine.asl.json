{
    "StartAt": "Crawl",
    "States": {
        "Crawl": {
            "Type": "Task",
            "Resource": "${CrawlURLsARN}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "CrawlError",
                        "Lambda.ServiceException",
                        "Lambda.AWSLambdaException",
                        "Lambda.SdkClientException",
                        "Labmda.TooManyRequestsException",
                        "Lambda.Unknown"
                    ],
                    "IntervalSeconds": 3,
                    "BackoffRate": 2.0,
                    "MaxAttempts": 3
                }
            ],
            "Next": "Did Crawl Succeed?"
        },
        "Did Crawl Succeed?": {
            "Type": "Choice",
            "Choices": [
                {
                    "Variable": "$.success",
                    "BooleanEquals": true,
                    "Next": "Send Crawl Success Message to SNS"
                },
                {
                    "Variable": "$.success",
                    "BooleanEquals": false,
                    "Next": "Crawl Failed"
                }
            ]
        },
        "Send Crawl Success Message to SNS": {
            "Type": "Task",
            "Resource": "arn:aws:states:::sns:publish",
            "Parameters": {
                "TopicArn": "${CrawlServiceTopicARN}",
                "Message.$": "$",
                "MessageAttributes": {
                    "event_type": {
                        "DataType": "String",
                        "StringValue": "CrawlComplete"
                    }
                }
            },
            "End": true
        },
        "Crawl Failed": {
            "Type": "Fail"
        }
    }
}
